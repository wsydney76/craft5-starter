{%- if craft.app.plugins.pluginEnabled('blitz') -%}
    {% do craft.blitz.options.cacheDuration('P1D').tags([entry.section.handle]) %}
{%- endif -%}
<!DOCTYPE html>
<html lang="{{ currentSite.language }}" style="overflow-y: scroll">
<head>
    {% include '_layouts/head.twig' with {entry} only %}
</head>
<body id="body" class="text-foreground bg-background dark:bg-background-dark dark:text-foreground-dark"
      dir="{{ craft.app.locale.orientation }}">

<a class="sr-only focus:not-sr-only text-xl" href="#content">{{ 'Skip to content'|t }}</a>


{% cache for 1 hour %}
    {% include '_layouts/nav.twig' with {entry} only %}
{% endcache %}


<main id="content">

    {% block heroArea %}
        {% if entry.section %}
            {% include [
                "_entries/#{entry.section.handle}_#{entry.type.handle}/hero-area.twig",
                "_entries/#{entry.section.handle}/hero-area.twig",
                '_layouts/partials/hero-area.twig'
            ] with {entry} only %}
        {% elseif entry.field %}
            {% include [
                "_entries/#{entry.field.handle}_#{entry.type.handle}/hero-area.twig",
                "_entries/#{entry.field.handle}/hero-area.twig",
                '_layouts/partials/hero-area.twig'
            ] with {entry} only %}
        {% endif %}
    {% endblock %}

    {% block contentWrapper %}
        <div class="my-16">
            {% block content %}{% endblock %}
        </div>
    {% endblock %}

</main>

{% cache globally for 1 hour %}
    {% include '_layouts/footer.twig' with {entry} only %}
{% endcache %}

{% if customConfig.useCookieConsent == 'prompt' %}
    {% include '_partials/cookie_consent.twig' %}
{% endif %}

</body>
</html>


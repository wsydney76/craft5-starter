{
  "description": "Multilingual Craft CMS starter for use with DDEV",
  "name": "wsydney76/craft4-ddev-starter",
  "version": "3.3.2",
  "license": "MIT",
  "require": {
    "craftcms/cms": "5.0.x-dev as 5.0.0-beta.9",
    "craftcms/contact-form": "^3.1.0",
    "fakerphp/faker": "^1.20",
    "nystudio107/craft-closure": "^1.0.3",
    "nystudio107/craft-code-field": "^5.0.0-beta.3",
    "nystudio107/craft-vite": "^5.0.0-beta.3",
    "putyourlightson/craft-sprig": "^3.0.0-beta.1",
    "vaersaagod/seomate": "^3.0.0-beta.2",
    "vlucas/phpdotenv": "^5.4"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/generator": "2.0.1",
    "craftcms/phpstan": "dev-main",
    "craftcms/rector": "dev-main",
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "scripts": {
    "pre-update-cmd": [
      "@php craft install/check && php craft off || exit 0"
    ],
    "post-update-cmd": [
      "@php craft install/check && php craft clear-caches/all && php craft migrate/all && php craft on && php craft project-config/rebuild || exit 0"
    ],
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.craftcms.com",
      "canonical": false
    }
  ]
}
